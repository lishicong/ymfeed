<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- 定义一个基础模板页 -->
	<definition name="template_generic" template="/WEB-INF/jsp/l.u.generic.jsp">
	</definition>
	<definition name="template_writer" template="/WEB-INF/jsp/l.u.writer.jsp">
	</definition>

	<!-- 用户主页面模版 -->
	<definition name="*.a" extends="template_generic">
		<put-attribute name="meta" value="/WEB-INF/jsp/c.meta.jsp" />
		<put-attribute name="title" value="" />
		<put-attribute name="header" value="/WEB-INF/jsp/c.u.header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/jsp/c.u.menu.jsp" />
		<put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/jsp/c.u.footer.jsp" />
	</definition>

	<!-- 写文章模版 -->
	<definition name="*.b" extends="template_writer">
		<put-attribute name="meta" value="/WEB-INF/jsp/c.meta.jsp" />
		<put-attribute name="title" value="" />
		<put-attribute name="menu" value="/WEB-INF/jsp/u.writer.menu.jsp" />
		<put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp" />
	</definition>

</tiles-definitions>